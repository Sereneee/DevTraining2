<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="personSingletonBeanId" class="com.example.bean.Person" scope="singleton"/>

<bean id="personPrototypeBeanId" class="com.example.bean.Person" scope="prototype"/>

<bean id="websocketBeanId" name="websocket" class="com.example.bean.ScopesConfig" scope="websocket"/>

</beans>

















